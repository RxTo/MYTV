<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android = "http://schemas.android.com/apk/res/android"
	android:layout_width = "match_parent"
	android:layout_height = "wrap_content"
	android:layout_margin="6dp"
	>
	
	<com.example.yuki.yukitv.widget.ScaleImageView
		android:id = "@+id/ivThumb"
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content"
		android:layout_alignParentStart = "true"
		android:layout_alignParentTop = "true"
		android:scaleType="centerCrop"
		/>
	
	<TextView
		android:id = "@+id/tvLocation"
		android:layout_width = "wrap_content"
		android:layout_height = "20dp"
		android:layout_alignParentEnd = "true"
		android:background = "@drawable/location_background"
		android:drawablePadding = "5dp"
		android:drawableStart = "@drawable/icon_location"
		android:gravity = "center"
		android:paddingEnd = "5dp"
		android:paddingStart = "15dp"
		android:text = "未知地址"
		android:textColor = "@android:color/white"
		android:textSize = "12dp"
		/>
	
	<TextView
		android:id = "@+id/tvTitle"
		android:layout_width = "match_parent"
		android:layout_height = "30dp"
		android:layout_alignBottom = "@+id/ivThumb"
		android:background = "@drawable/title_background"
		android:gravity = "bottom"
		android:maxLines = "1"
		android:paddingBottom = "5dp"
		android:paddingStart = "5dp"
		android:textColor = "@android:color/white"
		android:textSize = "12sp"
		android:textStyle = "bold"
		/>
	
	<LinearLayout
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content"
		android:layout_below = "@+id/ivThumb"
		android:gravity = "center_vertical"
		android:layout_margin="@dimen/dimen_5dp"
		android:orientation = "horizontal"
		>
		
		<TextView
			android:id = "@+id/tvName"
			android:layout_width = "0dp"
			android:layout_height = "wrap_content"
			android:layout_weight = "1"
			android:maxLines = "2"
			android:paddingStart = "5dp"
			android:textSize = "13sp"
			/>
		
		<TextView
			android:id = "@+id/tvViewer"
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content"
			android:drawableLeft = "@drawable/viewer"
			android:drawablePadding = "5dp"
			android:maxLines = "1"
			android:textColor = "@android:color/darker_gray"
			android:textSize = "12sp"
			/>
	</LinearLayout>
</RelativeLayout>

